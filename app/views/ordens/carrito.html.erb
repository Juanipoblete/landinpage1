<h1>Carrito</h1>
<table class="table">
  <tbody>
   <% @orden.orden_producto.each do |t| %>
    <tr>
      <td><%= t.producto.nombre %></td>
      <td><%= t.cantidad %></td>
      <td><%= t.precio %></td>
      <td><%= t.cantidad*t.precio %></td>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>Total</td>
      <td><%= @orden.get_total %></td>
    </tr>
  </tbody>
</table>
<div class="text-end">
 <button class="btn btn-ptimary">confirmar</button>
 </div>
 