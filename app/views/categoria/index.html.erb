rel="stylesheet" >

<p id="notice"><%= notice %></p>

<h1>Categoria</h1>

<table id="mytable" class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>imagen</th>
       <th>N productos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.nombre %></td>
        <td><%= categorium.imagen %></td>
         <td><%= categorium.nproductos %></td>
        <td><%= link_to 'Mostrar', categorium,
        class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_categorium_path(categorium),
        class: "btn btn-secondary" %></td>
        <td><%= link_to 'Eliminar', categorium, method: :delete, data: { confirm: 'Estas Seguro?' },
        class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

